{
  "compilerOptions": {
    "target": "es2020",
    "module": "node18",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,                        
    "skipLibCheck": true,
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "moduleResolution": "nodenext"
  }
}
