generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id @default(uuid())
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model User {
  id            String         @id
  username      String         @unique
  hash          String
  salt          String
  documents     Metadata[]
  sharedFolders SharedFolder[]
}

enum Type {
  FOLDER
  FILE
}

model Metadata {
  id             String         @id
  name           String
  size           Int?
  type           Type
  mimeType       String?
  createdAt      DateTime       @default(now())
  modifiedAt     DateTime       @default(now())
  parentFolderId String?
  userId         String
  sharedFolders  SharedFolder[]
  path           String?

  user         User       @relation(fields: [userId], references: [id])
  parentFolder Metadata?  @relation("metadataParent", fields: [parentFolderId], references: [id], onDelete: Cascade)
  childFolders Metadata[] @relation("metadataParent")
}

model SharedFolder {
  id        String   @id @default(uuid())
  userId    String
  folderId  String
  expiresAt DateTime

  user   User     @relation(fields: [userId], references: [id])
  folder Metadata @relation(fields: [folderId], references: [id], onDelete: Cascade)
}
