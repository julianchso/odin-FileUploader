<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="../../styles/output.css" />

    <title><% title %></title>
  </head>

  <div>
    <div class="grid-container">
      <div class="grid-header font-bold mb-5 text-base">
        <a href="#">Name</a>
        <a href="#">Type</a>
        <a href="#">File Size</a>
        <a href="#">Date Created</a>
        <a href="#">Date Modified</a>
      </div>
      <div class="grid grid-body gap-x-2 gap-y-4">
        <% if (folderData.files.length === 0) {%>
        <div class="text-xl col-span-full justify-self-center py-5">
          No files or folders to display.
        </div>
        <%} %> <% if (folderData) { %> <% folderData.files.forEach(childFolder => { %> <% if
        (childFolder.type == "FOLDER") { %>
        <a
          href="/folders/<%= childFolder.id %>"
          class="grid-row items-center hover:bg-white/20 p-2 gap-2"
        >
          <div><%= childFolder.name %></div>
          <div>—</div>
          <!-- placeholder for type -->
          <div>—</div>
          <!-- placeholder for size -->
          <div><%= childFolder.createdAt %></div>
          <div><%= childFolder.modifiedAt %></div>
        </a>
        <% } else if (childFolder.type == "FILE") { %>
        <div
          type="reset"
          class="grid-row items-centerrounded-md open-drawer-btn drawer-md cursor-pointer hover:bg-white/20 p-2 gap-2"
          data-fileId="<%=childFolder.id%>"
        >
          <div><%= childFolder.name %></div>
          <div><%= childFolder.mimeType %></div>
          <div><%= childFolder.size %></div>
          <div><%= childFolder.createdAt %></div>
          <div><%= childFolder.modifiedAt %></div>
        </div>
        <div
          name="fileInfo"
          class="fileInfo hidden"
          data-file-info="<%= JSON.stringify(childFolder) %>"
        ></div>
        <% } %>
        <!-- </div> -->
        <% }); %> <% } %>
      </div>
    </div>
  </div>
  <script
    type="module"
    src="https://early.webawesome.com/webawesome@3.0.0-beta.4/dist/webawesome.loader.js"
  ></script>
</html>
